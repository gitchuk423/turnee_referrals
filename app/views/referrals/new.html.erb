<% provide(:title, 'Sign up') %>
<h1>Create Referral</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@referral) do |f| %>
	  
	  <%= render 'shared/error_messages' %>
	
      <%= f.label :client_name %>
      <%= f.text_field :client_name %>

      <%= f.label :client_email %>
      <%= f.text_field :client_email %>

      <%= f.label :public_comments %>
      <%= f.text_field :public_comments %>

      <%= f.submit "Create Referral", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>